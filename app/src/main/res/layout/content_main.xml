<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:id="@+id/realative_0"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_usercenter"
            android:src="@drawable/main_icon_usercenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
        <ImageView
            android:id="@+id/imageview_message"
            android:src="@drawable/main_icon_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/realative_1"
        android:layout_marginTop="30px"
        android:layout_below="@+id/realative_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/text_username"
            android:src="@drawable/main_icon_usercenter"
            android:layout_width="wrap_content"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:layout_height="70px"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="17sp"
            android:background="@drawable/content_background_white"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/realative_2"
        android:layout_below="@+id/realative_1"
        android:layout_width="492px"
        android:layout_height="439px"
        android:layout_centerHorizontal="true"
        android:paddingTop="20px"
        android:background="@drawable/main_icon_charge_2"
        android:gravity="center">
        <LinearLayout
            android:layout_above="@+id/button_charge_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/new_head_back"
                android:textSize="17sp"
                android:text="余额" />
            <LinearLayout
                android:layout_marginTop="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|bottom">
                <TextView
                    android:id="@+id/text_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/new_head_back"
                    android:textSize="41sp"
                    android:text="null" />
                <TextView
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/new_head_back"
                    android:textSize="27sp"
                    android:text="元" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/button_charge_money"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="300px"
            android:layout_height="60px"
            android:gravity="center_horizontal"
            android:background="@drawable/selector_charge_bg">
            <TextView
                android:id="@+id/text_charge"
                android:layout_centerVertical="true"
                android:textColor="@color/new_text_back"
                android:text="充  值"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/main_icon_right"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/main_icon_right"/>
        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/text_blue_flag"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="17sp"
        android:text=""/>


    <RelativeLayout
        android:id="@+id/linear_1"
        android:layout_marginBottom="60px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="502px"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/button_camear"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_open_water"/>
        <ImageView
            android:id="@+id/button_open"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_open_water"/>
        <ImageView
            android:id="@+id/button_close"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_close_water"/>
        </RelativeLayout>


</RelativeLayout>
